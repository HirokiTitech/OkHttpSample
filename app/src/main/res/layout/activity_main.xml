<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/get_sample_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/get_sample" />

    <Button
        android:id="@+id/post_json_sample_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post_json_sample_sample" />

    <Button
        android:id="@+id/auth_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/auth_sample" />

    <Button
        android:id="@+id/logging_sample_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logging_sample" />

    <Button
        android:id="@+id/disk_cache_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/disk_cache_sample" />

</LinearLayout>
